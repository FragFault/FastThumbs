<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/boardRank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/boardPicture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/boardPicture"
        android:layout_width="92dp"
        android:layout_height="85dp"
        app:layout_constraintStart_toEndOf="@+id/boardRank"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="15dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/boardUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/boardPicture"
        app:layout_constraintStart_toEndOf="@+id/boardPicture"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/boardPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/boardPicture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/boardUsername"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>